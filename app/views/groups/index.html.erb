<h1>Listing groups</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
    </tr>
  </thead>

  <tbody>
    <% @groups.each do |group| %>
      <tr>
        <td><%= group.name %></td>
        <td><%= link_to 'Show', company_group(group) %></td>
        <td><%= link_to 'Edit', edit_company_group_path(group) %></td>
        <td><%= link_to 'Destroy', group, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= paginate @groups %>
<%= link_to 'New Group', new_company_group_path %>
<%= link_to 'Back', companies_path %>

